---
import { Image } from "astro:assets";
import luis from "../../assets/home/clients/luis-n.png";
import karen from "../../assets/home/clients/karen-miranda.png";

const reviews = [
  {
    name: "Luis N.",
    review:
      "This family owned business has come a long way and they have never sacrificed quality even when times got tough. Food and service had always been the forefront, and they take a lot of pride in the food they make. If you haven't had their aguas frescas, they were always the best on a warm day.",
    image: luis,
  },
  {
    name: "Karen Miranda",
    review:
      "Everything was delicious and so special! Thank you for sharing and doing such an amazing job at our baby shower 🥰🙏🏼😊",
    image: karen,
  },
  {
    name: "Karen",
    review:
      "Everything was delicious and so special! Thank you for sharing and doing such an amazing job at our baby shower 🥰🙏🏼😊",
    image: luis,
  },
];
---

<section id="reviews" class:list={["section"]}>
  <header
    class:list={[
      "flex flex-col gap-7",
      "mx-auto",
      "max-w-2xl",
      "[&_p]:text-lg",
      "font-extralight text-center text-green-leaf-900",
    ]}
  >
    <h2
      class="font-serif text-heading-sm md:text-heading-lg text-french-rose-400"
    >
      Celebrating with homemade flavor & happy clients
    </h2>

    <p>
      At La Chinacata we strive to create unforgettable culinary experiences for
      each event. But don't just take our word for it, listen to what our
      satisfied customers say!
    </p>
  </header>
  <div class:list={["mx-auto", "max-w-screen-sm", "pt-10"]}>
    {
      reviews.map((review, index) => (
        <>
          <div
            id={review.name.toLocaleLowerCase()}
            class:list={[
              "flex flex-col sm:flex-row gap-6",
              { hidden: index !== 0 },
            ]}
          >
            <Image
              src={review.image}
              alt={review.name}
              class:list={[
                "basis-1/3",
                "rounded-3xl",
                "mx-auto",
                "object-contain h-60 lg:h-72",
              ]}
            />
            <div
              class:list={[
                "flex flex-col basis-2/3",
                "place-self-center",
                "[&_p]:text-center",
                "text-pretty text-green-leaf-900",
              ]}
            >
              <p>
                <span class="align-top font-serif font-black text-lg">"</span>
                {review.review}
                <span class="align-top font-serif font-black text-lg">"</span>
              </p>
              <p class="italic pt-4 text-french-rose-400">{review.name}</p>
            </div>
          </div>
        </>
      ))
    }
    <div
      id="next"
      class:list={[
        "cursor-pointer",
        "flex justify-end",
        "font-light text-sm text-green-leaf-900 uppercase",
      ]}
    >
      next
    </div>
  </div>
</section>
<script>
  const next = document.getElementById("next");
  const review1 = document.getElementById("luis n.");
  const review2 = document.getElementById("karen miranda");

  console.log("NEXT: ", next);
  console.log("review 1: ", review1);
  console.log("review 2: ", review2);
  next?.addEventListener("click", () => {
    review1?.classList.toggle("hidden");
    review2?.classList.toggle("hidden");
  });
</script>
