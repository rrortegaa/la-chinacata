---
import "@fontsource/kurale";
import "@fontsource-variable/outfit"; // Supports weights 100-900
import Navbar from "../components/Navbar.astro";
import SocialMedia from "../components/SocialMedia.astro";
import Footer from "../components/Footer.astro";

interface Props {
  class?: string;
  title: string;
}

const { class: className, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="La Chinacata offers exceptional catering services for weddings, corporate events, and parties in California. Customizable menus with fresh, homemade dishes."
    />
    <meta
      name="keywords"
      content="La Chinacata, catering, homemade, fresh ingredients, family recipes, weddings, corporate events, parties, California"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="La Chinacata offers exceptional catering services for weddings, corporate events, and parties in California. Customizable menus with fresh, homemade dishes."
    />
    <meta property="og:image" content="/la-chinacata.png" />
    <meta property="og:url" content="https://www.chinacata-reyna.com/" />
    <meta property="og:type" content="website" />
  </head>
  <body class:list="bg-neutral-50 text-[#666]">
    <Navbar />
    <main
      class:list={["flex flex-col", "gap-14 md:gap-28", "mt-24", className]}
    >
      <slot />
      <SocialMedia />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  .section {
    padding: 0 1rem;
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }
  .section-full {
    margin: 0 auto;
    width: 100%;
  }
</style>
